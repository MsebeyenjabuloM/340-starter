<%- include("../partials/head", { title: title }) %>

<%- messages() %>

<h1><%= title %></h1>

<p>Confirm Deletion - The delete is permanent.</p>

<form action="/inv/delete" method="post" class="form">
  <!-- Hidden ID field -->
  <input type="hidden" name="inv_id" value="<%= inv_id %>">

  <label for="inv_make">Make</label>
  <input 
    type="text" 
    name="inv_make" 
    id="inv_make" 
    readonly
    value="<%= inv_make %>"
  >

  <label for="inv_model">Model</label>
  <input 
    type="text" 
    name="inv_model" 
    id="inv_model" 
    readonly
    value="<%= inv_model %>"
  >

  <label for="inv_year">Year</label>
  <input 
    type="number" 
    name="inv_year" 
    id="inv_year" 
    readonly
    value="<%= inv_year %>"
  >

  <label for="inv_price">Price</label>
  <input 
    type="number" 
    name="inv_price" 
    id="inv_price" 
    readonly
    value="<%= inv_price %>"
  >

  <!-- Submit button -->
  <button type="submit">Delete Vehicle</button>
</form>
