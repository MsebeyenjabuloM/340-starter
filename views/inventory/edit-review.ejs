<h1>Edit Your Review</h1>

<form action="/review/update" method="POST" class="form">
  <!-- Hidden review_id -->
  <input type="hidden" name="review_id" value="<%= review.review_id %>">

  <!-- Screen name -->
  <label for="screen_name">Your Screen Name</label>
  <input 
    type="text" 
    id="screen_name" 
    value="<%= review.screen_name %>" 
    readonly
  >

  <!-- Review text (editable) -->
  <label for="review_text">Review</label>
  <textarea 
    name="review_text" 
    id="review_text" 
    rows="4" 
    required
  ><%= review.review_text %></textarea>

  <button type="submit">Update Review</button>
</form>
