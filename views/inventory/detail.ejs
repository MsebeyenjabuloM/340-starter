<h1><%= title %></h1>

<!-- The vehicle detail HTML -->
<div id="vehicle-detail">
  <%- vehicleHTML %>
</div>

<!-- The review section -->
<section id="reviews">
  <h2>Reviews</h2>

  <% if (reviews && reviews.length > 0) { %>
    <ul class="review-list">
      <% reviews.forEach((review) => { %>
        <li class="review-item">
          <p><strong><%= review.screen_name %>:</strong> <%= review.review_text %></p>
          <p class="review-date"><%= new Date(review.review_date).toLocaleDateString() %></p>

          <!-- edit/delete -->
          <% if (account_id && account_id === review.account_id) { %>
            <div class="review-actions">
              <a href="/review/edit/<%= review.review_id %>">Edit</a>

              <form action="/review/delete" method="POST" style="display:inline;">
                <input type="hidden" name="review_id" value="<%= review.review_id %>">
                
                <button type="submit">Delete</button>
              </form>
            </div>
          <% } %>

        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>No reviews yet. Be the first to review this vehicle!</p>
  <% } %>

  <% if (account_id) { %>
    <%- include('add-review') %>
  <% } else { %>
    <p>Please <a href="/account/login">log in</a> to write a review.</p>
  <% } %>
</section>
