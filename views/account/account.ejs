<h1>Account Management</h1>

<!-- Display flash messages -->
<% const messages = Array.isArray(locals.notice) ? locals.notice : [locals.notice]; %>

<ul class="flash-messages">
  <% messages.forEach(msg => { %>
    <li><%= msg %></li>
  <% }) %>
</ul>



<h2>My Reviews</h2>

<% if (reviews && reviews.length > 0) { %>
  <ul class="review-list">
    <% reviews.forEach((review) => { %>
      <li class="review-item">
        <p><strong><%= review.screen_name %>:</strong> <%= review.review_text %></p>
        <p>Vehicle: <%= review.inv_make %> <%= review.inv_model %></p>
        <a href="/review/edit/<%= review.review_id %>">Edit</a>
        <form action="/review/delete" method="POST" style="display:inline;">
          <input type="hidden" name="review_id" value="<%= review.review_id %>">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
<% } else { %>
  <p>You haven't written any reviews yet.</p>
<% } %>
