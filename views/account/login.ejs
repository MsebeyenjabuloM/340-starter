<main class="login-page">
  
  <!-- Flash Messages -->
  <div>
    <%- messages() %>
  </div>

  <!-- Login Form -->
  <form id="loginForm" action="/account/login" method="post" class="form">

    <h1><%= title %></h1>

    <!-- EMAIL -->
    <label for="account_email">Email</label>
    <input 
      type="email" 
      id="account_email" 
      name="account_email" 
      required
    >

    <!-- PASSWORD -->
    <!-- PASSWORD -->
<label for="account_password">Password</label>

<input 
  type="password" 
  id="account_password" 
  name="account_password" 
  required
  placeholder="Enter your password"
/>


    <button type="submit">Login</button>

  </form>

  <p>
    Don't have an account?
    <a href="/account/register">Sign-Up</a>
  </p>

</main>
