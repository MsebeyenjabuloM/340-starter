<%- include("../partials/head", { title: title }) %>
<%- nav %>
<%- messages() %>

<h1><%= title %></h1>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<!-- Account Information Update Form -->
<form id="accountUpdateForm" action="/account/update" method="post" class="form">
  <input type="hidden" name="account_id" value="<%= account_id %>">

  <label for="account_firstname">First Name</label>
  <input type="text" name="account_firstname" id="account_firstname" required value="<%= typeof account_firstname != 'undefined' ? account_firstname : '' %>">

  <label for="account_lastname">Last Name</label>
  <input type="text" name="account_lastname" id="account_lastname" required value="<%= typeof account_lastname != 'undefined' ? account_lastname : '' %>">

  <label for="account_email">Email</label>
  <input type="email" name="account_email" id="account_email" required value="<%= typeof account_email != 'undefined' ? account_email : '' %>">

  <button type="submit">Update Account Info</button>
</form>

<hr>

<!-- Change Password Form -->
<form id="passwordChangeForm" action="/account/update-password" method="post" class="form">
  <input type="hidden" name="account_id" value="<%= account_id %>">

  <label for="account_password">New Password</label>
  <input type="password" name="account_password" id="account_password" required>

  <p>Password must be at least 12 characters, contain at least one number, one uppercase letter, and one special character.</p>

  <button type="submit">Change Password</button>
</form>
