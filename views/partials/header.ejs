<header id="top-header">
  <div class="header-inner">
    <span class="siteName">
      <a href="/" title="Return to home page">CSE Motors</a>
    </span>

    <div id="tools">
      <% if (locals.loggedin) { %>
        <!-- Show Welcome link and Logout when logged in -->
        <a title="Go to Account Management" href="/account/">
          Welcome <%= locals.accountData ? locals.accountData.account_firstname : '' %>
        </a>
        <a title="Click to log out" href="/account/logout">Logout</a>
      <% } else { %>
        <!-- Show My Account only when not logged in -->
        <a title="Click to log in" href="/account/login">My Account</a>
      <% } %>
    </div>
  </div>
</header>



